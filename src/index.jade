extends ./layout.jade

block content
  body
    .container-fluid.big
      .row.big
        .col-xs-3.bg-primary.big.menu
          .container-fluid
            .row
              h1.orbitron haul.
              .col-xs-12
                h4 Menu
                .list-group
                  .list-group-item
                    p Stats
                  .list-group-item
                    p Schedule
                  .list-group-item
                    p Workouts
                  .list-group-item
                    p Create Workouts
                  .list-group-item
                    p Create Programs
                  .list-group-item
                    p Complete A Workout


                //- ul.nav.nav-pills.nav-stacked.fat
                //-   li
                //-     button.button.btn-trans Stats
