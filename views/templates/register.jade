extends ../navbar.jade
block page
  .container
    .row(style='height: 75px;')
    .row
      .col-xs-10.col-xs-offset-1
        h1.page-header Register
        form
          .form-group
            label(for="email") Email
            input.form-control(type="email" placeholder="lifter@haul.com")
          .form-group
            label Sex
            .radio
              label
                input.radio(type="radio")
                | Male
            .radio
              label
                input.radio(type="radio")
                | Female
          .form-group
            label Age
            input.form-control(type="number" min="0" max="110")
          .form-group
            label(for="username") Username
            input.form-control(type="text" placeholder="username" name="username")
          .form-group
            label(for="password") Password
            input.form-control(type="password" placeholder="password" name="password")
          button.btn.btn-default(type="submit") Register Your Account
