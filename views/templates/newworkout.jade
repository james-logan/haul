extends ../bridge.jade

block whatever
  .col-xs-9
    .row
      .col-xs-12
        h2.squish Create Workout
    .row
      label Workout Name
      input(type='text' ng-model="bridge.workout.name")
      .col-xs-5
        .panel.panel-primary
          .panel-heading
            .panel-title Search for Exercises
          .panel-body
            form(ng-submit="bridge.searchExercises(bridge.form)").search-exercise
              .form-group
                label Exercise Name
                .input-group
                  input.form-control(type='search' name='search' placeholder="Lat Pulldown" ng-model="bridge.form.search")
                  span.input-group-btn
                    button.btn.btn-default(type="submit") Search
              h5 Filter By:
              .row
                .col-xs-6
                  h6 Equipment
                  .checkbox
                    label
                      input(type='checkbox')
                      | Dumbbells
                  .checkbox
                    label
                      input(type='checkbox')
                      | Barbells
                  .checkbox
                    label
                      input(type='checkbox')
                      | Machine
                  .checkbox
                    label
                      input(type='checkbox')
                      | Cable
                .col-xs-6
                  h6 Body Part
                  div
                    .radio-inline
                      label
                        input(type='radio' name="bodyPart")
                        | Back
                    .radio-inline
                      label
                        input(type='radio' name="bodyPart")
                        | Chest
                  div
                    .radio-inline
                      label
                        input(type='radio' name="bodyPart")
                        | Legs
                    .radio-inline
                      label
                        input(type='radio' name="bodyPart")
                        | Arms
                  div
                    .radio-inline
                      label
                        input(type='radio' name="bodyPart")
                        | Shoulders
                  div
                    .radio-inline
                      label
                        input(type='radio' name="bodyPart")
                        | Core
      .col-xs-7
        .panel.panel-primary
          .panel-heading
            .panel-title Results
          .panel-body.overflow-scroll
            div(ng-repeat="exercise in bridge.results")
              h5.pull-left {{exercise.name}}
              button(ng-click="bridge.addExercise(exercise)").btn.btn-success.pull-right +
    .row
      .col-xs-12.overflow-scroll
        table.table
          tr
            th Exercise
            th Sets
            th Reps
            th Rest
            th Progression
          tr(ng-repeat="exercise in bridge.workout.exercises")
            td {{exercise.name}}
            td
              input(type="number" ng-model="exercise.sets")
              //- bridge.workout[$index]
            td
              input(type="number" ng-model="exercise.reps")
            td
              input(type="number" ng-model="exercise.rest")
            td
              input(type="number" ng-model="exercise.progression")
    .row
      .col-xs-12
        button(ng-click="bridge.saveWorkout()").btn.btn-success.btn-block Save Workout

