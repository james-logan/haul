extends ../bridge.jade

block whatever
  .col-xs-10.col-xs-offset-2
    .row
      .col-xs-12
        h2.squish Create Workout
    .row
      .col-xs-12
        .col-xs-5
          form.form-inline
            .form-group
              label
                h4(style="display: inline;") Workout Name
              input.form-control(type='text' ng-model="bridge.workout.name" style="width: 250px; margin: 0 0 10px 10px;")
      .col-xs-5
        .panel.panel-primary
          .panel-heading
            .panel-title Search for Exercises
          .panel-body
            form(ng-submit="bridge.searchExercises(bridge.form)").search-exercise
              .form-group
                label Exercise Name
                .input-group
                  input.form-control(type='search' name='search' placeholder="Lat Pulldown" ng-model="bridge.form.search")
